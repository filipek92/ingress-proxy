{
  "version": "1.0.0",
  "slug": "ingress-proxy",
  "name": "Ingress Proxy",
  "description": "Proxy server pro přístup k lokálním zařízením v síti",
  "url": "https://github.com/filip/ingress-proxy",
  "codenotary": "notary@home-assistant.io",
  "stage": "experimental",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "init": false,
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:router-network",
  "panel_title": "Ingress Proxy",
  "options": {
    "devices": [
      {
        "name": "Example Device",
        "target_host": "192.168.1.100",
        "target_port": 80,
        "path_prefix": "/device1",
        "rewrite_paths": true,
        "custom_headers": [
          "X-Forwarded-For: $remote_addr"
        ],
        "auth_required": false
      }
    ],
    "ssl": false,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "log_level": "info"
  },
  "schema": {
    "devices": [
      {
        "name": "str",
        "target_host": "str",
        "target_port": "int",
        "path_prefix": "str?",
        "rewrite_paths": "bool?",
        "custom_headers": [
          "str?"
        ],
        "auth_required": "bool?",
        "basic_auth_user": "str?",
        "basic_auth_pass": "str?"
      }
    ],
    "ssl": "bool?",
    "certfile": "str?",
    "keyfile": "str?",
    "log_level": "list(debug|info|warning|error)?"
  },
  "image": "ghcr.io/home-assistant/{arch}-addon-ingress-proxy"
}
